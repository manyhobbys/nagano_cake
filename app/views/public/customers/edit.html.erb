<h2>会員情報編集</h2>

<div class="col-xs-3">

 <%= form_with model: @customer, url: customers_infomation_path, local:true do |f| %>

  <div class="field">
    <%= f.label :"名前" %>
    <%= f.label :"(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :"(名)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class= "field">
     <%= f.label :"フリガナ" %>
     <%= f.label :"(セイ)" %>
     <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
     <%= f.label :"(メイ)" %>
     <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :"住所(ハイフンなし)" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号" %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email"  %>
  </div>

    <%= f.submit "編集内容を保存", class: "btn btn-success mb-4" %>
    <%= link_to "退会する", customers_unsubscribe_path,class: "btn btn-danger" %>
  <% end %>
</div>