<div class="container mt-5 mb-5">
  <div class="row text-center text-xs-center text-sm-left text-md-left">
    <div class="col-xs-12 col-sm-12 col-md-6 mx-auto text-right">
      <%= image_tag @item.get_image(400,200) %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 mx-auto">
      <h2><%= @item.name %></h2>
      <p><%= @item.introduction %></p>
      <% if @item.is_active == true %>
        <p>
          <strong>¥ <%= @item.add_tax_price.to_s(:delimited) %></strong><span>(税込)</span>
        </p>
        <p>
          <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.number_field :amount, placeholder: "個数選択" %>
            <%= f.submit "カートに入れる", class: "btn btn-success" %>
          <% end %>
        </p>
      <% else %>
        <p class="text-danger">販売停止中</p>
      <% end %>
    </div>
  </div>
</div>