<h5>注文履歴一覧</h5>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
      <td>
        <%= "〒" + order.postal_code %><br>
        <%= order.address %><br>
        <%= order.name %>
      </td>
      <td>
      <% order.order_details.each do |order_detail| %>
        <%= order_detail.item.name %>
      <% end %>
      </td>

      <td><%= order.支払金額 %></td>

      ステータス

      表示する
    </tr>
    <% end %>
  </tbody>
</table>
