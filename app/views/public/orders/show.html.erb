<div class="container">
  <h4 class="title bg-light"><strong>注文履歴詳細</strong></h4>
    <div class="row">
      <div class="col">
        <h6 class="my-3"><strong>注文情報</strong></h6>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th class="bg-light">注文日</th>
              <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <tr>
              <th class="bg-light">配送先</th>
              <td>
                <%= "〒" + @order.postal_code %>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th class="bg-light">支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th class="bg-light">ステータス</th>
              <td><%= @order.status_i18n %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col">
        <h6 class="my-3"><strong>請求情報</strong></h6>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th class="bg-light">商品合計</th>
              <td><%= @order.total_item_amount.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th class="bg-light">配送料</th>
              <td><%= @order.shipping_cost %></td>
            </tr>
            <tr>
              <th class="bg-light"><strong>ご請求額</strong></th>
              <td><%= @order.total_payment.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <h6 class="my-3"><strong>注文内容</strong></h6>
        <table class="table table-bordered">
          <thead>
            <tr class="bg-light">
              <th>商品</th>
              <th>単価</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price.to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal.to_s(:delimited) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>