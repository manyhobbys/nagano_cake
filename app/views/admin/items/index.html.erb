<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table text-center mb-5">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td>
              <%= item.price %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <%= item.is_active %>
            </td>
          <% end %>
        </tbody>
      </table>

      <div>
        <%= paginate @items, class: "text-center" %>
      </div>
    </div>
  </div>
</div>