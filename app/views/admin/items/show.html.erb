<div class="container">
  <h2>商品詳細</h2>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.get_image(400,250) %>
    </div>
    <div class="col-md-7 offset-md-1">
      <table class="table">
        <tr>
          <th style="border:none;">商品名</th>
          <td style="border:none;"><%= @item.name %></td>
        </tr>
        <tr>
          <th style="border:none;">商品説明</th>
          <td style="border:none;"><%= @item.introduction %></td>
        </tr>
        <tr>
          <th style="border:none;">ジャンル</th>
          <td style="border:none;"><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th style="border:none;">税込価格</th>
          <td style="border:none;"><%= @item.with_tax_price.to_s(:delimited) %>
              (<%= @item.price.to_s(:delimited) %>) 円
          </td>
        </tr>
        <tr>
          <th style="border:none;">販売ステータス</th>
          <td style="border:none;">
            <% if @item.is_active == true  %>
              <span class="text-success">販売中</span>
            <% else %>
              <span class="text-danger">販売停止中</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th style="border:none;">
            <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-lg mx-auto" %>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>