<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品編集</h2>
    </div>

    <div>
      <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
      <table>
        <tr>
          <th><label>商品画像</label></th>
          <td><%= f.file_field :image %></td>
        </tr>
        <tr>
          <th><label>商品名</label></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><label>商品説明</label></th>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <th><label>ジャンル</label></th>
          <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
        </tr>
        <tr>
          <th><label>税抜価格</label></th>
          <td><%= f.text_field :price %> 円</td>
        </tr>
        <tr>
          <th><label>販売ステータス</label></th>
          <td>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>