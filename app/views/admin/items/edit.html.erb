<div class="container">
  <div class="row">
    <div class="">
      <h2>商品編集</h2>
    </div>

    <div>
      <%= form_with model: @item do |f| %>
      <div>
        <label>商品画像</label>
        <%= f.file_field :image, accept %>
      </div>
      <div>
        <label>商品名</label>
        <%= f.text_field :name %>
      </div>
      <div>
        <label>商品説明</label>
        <%= f.text_area :introduction %>
      </div>
      <div>
        <label>ジャンル</label>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div>
      <div>
        <label>税抜価格</label>
        <%= f.text_field :price %>
      </div>
      <div>
        <label>販売ステータス</label>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中" %>
      </div>
      <% end %>
    </div>
  </div>
</div>