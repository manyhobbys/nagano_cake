<table>
  <thead>
    <tr>
      <td>注文履歴詳細</td>
    </tr>
  </thead>
</table>

<table>
  <thead>
    <tr>
      <th>購入者</th>
      <td><%= link_to @order.name, admin_customers_path %></td>
    </tr>

    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
    </tr>

    <tr>
      <th>配送先</th>
      <td><%= (@order.ostal_code_and_address_and_name) %></td>
    </tr>

    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>

    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_with model: @order, url: admin_ordeer_path(@order) do |f| %>
          <%= f.select :status, (0..4).to_a.map{ |q| ["#{ I18n.t("enums.order.status.#{Order.statuses.key(q)}")}",Order.statuses.key(q)] }, { selected: @order.status } %>
          <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
      </td>
    </tr>
  </thead>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <body>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= number_to_currency(order_detail.add_tax_price) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal %></td>
      <td>
        <%= form_with model: order_detail, url: admin_order_order_detail_path(order_detail) do |f| %>
          <%= f.select :making_status, (0..3).to_a.map{ |q| ["#{ I18n.t("enums.order_detail.making_status.#{OrderDetail.making_statuses.key(q)}")}",OrderDetail.making_statuses.key(q)] }, { selected: order_detail.making_status } %>
          <%= f.submit "更新", class:"btn btn-success" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </body>
<table>

<table>
  <thead>
    <tr>
      <th>商品合計</th>
      <td><%= number_to_currency(@order.total_payment, unit:'円') %></td>
    </tr>

    <tr>
      <th>送料</th>
      <td><%= number_to_currency(@order.shipping_cost, unit:'円') %></td>
    </tr>

    <tr>
      <th>請求合計</th>
      <td><%= number_to_currency(@order.total_paymen_sum, unit:"円") %></td>
    </tr>
  </thead>
</table>