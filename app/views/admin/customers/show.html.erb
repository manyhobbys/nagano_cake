<div class="container">
  <div class="row">
    <div class="col-8">
      <h5 class="title"><%= @customer.full_name %>さんの会員詳細</h5>
      <table>
        <tbody>
          <tr>
            <th class="col-4">会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <% if @customer.is_deleted %>
                <p class="text-success"><strong>有効</strong></p>
              <% else %>
                <p class="text-muted"><strong>退会</strong></p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="row mb-5">
        <div class="col-3 offset-4">
          <%= link_to "編集する", edit_admin_customer_path, class:'btn btn-success px-3' %>
        </div>
        <div class="col-5">
          <%=link_to "注文履歴一覧を見る", admin_root_path, class:'btn btn-primary px-3' %>
        </div>
      </div>
    </div>
  </div>
</div>