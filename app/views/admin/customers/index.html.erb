<div class = "container">
  <div class = "row">
    <div class "col-sm-10 px-sm-0 mx-auto">
      <h2>会員一覧</h2>
      <table class = "table table-bordered">
        <thead>
          <tr>
            <th class = "table-active">会員ID</th>
            <th class = "table-active">氏名</th>
            <th class = "table-active">メールアドレス</th>
            <th class = "table-active">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers .each do |customers| %>
          <tr>
            <td ><%= customers.id %></td>
            <td >
              <%= customers.last_name %>
              <%= customers.first_name %>
            </td>
            <td ><%= customers.email %></td>
            <td >
              <%= customers.is_deleted %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
