<div class="container">
  <div class="row">
    <div class="col">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>