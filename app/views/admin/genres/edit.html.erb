<div class="container">
  <div class="row">
    <div class="col">
      <h3>ジャンル編集</h3>

      <div>
        <%= form_with model: @genre, url: admin_genre_path, method: :patch, local: true do |f| %>
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name %>
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>