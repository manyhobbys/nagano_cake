<div class="container">
  <h4>ジャンル編集</h4>
  <div class="row">
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch, local: true do |f| %>
        <div class="field row">
          <label for="inputName", class="col-lg-2 col-form-label">ジャンル名</label>
          <div class="col">
            <%= f.text_field :name, class:'form-control', id:'inputName' %>
          </div>
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
